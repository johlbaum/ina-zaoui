{% if totalPages > 1 %}
	<nav aria-label="Page navigation">
		<ul class="pagination">
			{% if page > 1 %}
				<li class="page-item">
					<a class="page-link" href="{{ path(basePath, queryParams|merge({ page: 1 })) }}">Première page</a>
				</li>
				<li class="page-item">
					<a class="page-link" href="{{ path(basePath, queryParams|merge({ page: page - 1 })) }}">Précédent</a>
				</li>
			{% endif %}

			{% for i in range(max(1, page - 3), min(totalPages, page + 3)) %}
				<li class="page-item {% if i == page %}active{% endif %}">
					<a class="page-link" href="{{ path(basePath, queryParams|merge({ page: i })) }}">{{ i }}</a>
				</li>
			{% endfor %}

			{% if page < totalPages %}
				<li class="page-item">
					<a class="page-link" href="{{ path(basePath, queryParams|merge({ page: page + 1 })) }}">Suivant</a>
				</li>
				<li class="page-item">
					<a class="page-link" href="{{ path(basePath, queryParams|merge({ page: totalPages })) }}">Dernière page</a>
				</li>
			{% endif %}
		</ul>
	</nav>
{% endif %}